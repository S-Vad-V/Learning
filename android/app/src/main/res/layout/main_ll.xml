<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="402dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginTop="4dp"
        android:text="Test text"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.871"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edit1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginTop="23dp"
        android:editable="true"
        android:ems="10"
        android:inputType="number"
        android:minHeight="85dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        tools:ignore="MissingConstraints" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/edit1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/bClearAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="numberButtonsClick"
                android:text="AC"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bRemoveLast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_span="1"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:paddingTop="0dp"
                android:paddingBottom="10dp"
                android:text="&#8592;"
                android:textSize="34sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bPlusMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_span="1"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:paddingTop="0dp"
                android:text="+/-"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bDivision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="operationButtonsClick"
                android:text="/"
                android:textSize="34sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="numberButtonsClick"
                android:text="1"
                android:textSize="34sp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="numberButtonsClick"
                android:text="2"
                android:textSize="34sp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="numberButtonsClick"
                android:text="3"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="operationButtonsClick"
                android:text="+"
                android:textSize="34sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="numberButtonsClick"
                android:text="4"
                android:textSize="34sp" />

            <Button
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="numberButtonsClick"
                android:text="5"
                android:textSize="34sp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="numberButtonsClick"
                android:text="6"
                android:textSize="34sp" />


            <Button
                android:id="@+id/bMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="operationButtonsClick"
                android:text="-"
                android:textSize="34sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="numberButtonsClick"
                android:text="7"
                android:textSize="34sp" />

            <Button
                android:id="@+id/b8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="numberButtonsClick"
                android:text="8"
                android:textSize="34sp" />

            <Button
                android:id="@+id/b9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="numberButtonsClick"
                android:text="9"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bMultip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="operationButtonsClick"
                android:text="*"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/bDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:text="."
                android:textSize="34sp" />

            <Button
                android:id="@+id/b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:onClick="numberButtonsClick"
                android:text="0"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bEqueal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_span="2"
                android:backgroundTint="@color/main_buttons"
                android:minWidth="92dp"
                android:minHeight="88dp"
                android:text="="
                android:textSize="34sp" />
        </TableRow>

    </TableLayout>

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginStart="159dp"
        android:layout_marginEnd="252dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>